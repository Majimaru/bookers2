<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select([['User'], ['Book']]) %>
    <%= f.select :method, options_for_select([["完全一致","perfect"], 
        ["前方一致","forward"], ["後方一致","backward"], ["部分一致","partial"]]) %>
    <%= f.submit "検索", class: "btn btn-sm btn-secondary mr-2" %>
  <% end %>
  
  <%= form_with url: tag_search_path, method: :get do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "タグ検索", class: "btn btn-sm btn-secondary" %>
  <% end %>
<% end %>