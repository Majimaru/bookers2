<div class="container">
  <div class="row">
    <div class="col-12">
      <% if @model == "User" %>
        <h2>Users search for "<%= @word %>"</h2>
        <%= render "books/index", books: @books, hidden: "true" %>
      <% else %>
        <h2>Books search for "<%= @word %>"</h2>
        <%= render "books/index", books: @books, hidden: "true" %>
      <% end %>
    </div>
  </div>
</div>