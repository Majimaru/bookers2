<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <% unless hidden == "true" %>
        <th colspan="4"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(80, 80) %></td>
        <td><%= user.name %></td>
        <% unless hidden == "true" %>
          <td>フォロー数:<%= user.followings.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td><%= render 'relationships/btn', user: user %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>