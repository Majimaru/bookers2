<div class="col-md-3">
  <%= render 'layouts/common', user: @user, book: @book %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="6"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followings.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <% if user == current_user %>
            <td></td>
          <% else %>
            <% if current_user.followed_by?(user) %>
              <td><%= link_to "フォロー外す", user_relationships_path(user), method: :delete %></td>
            <% else %>
              <td><%= link_to "フォローする", user_relationships_path(user), method: :post %></td>
            <% end %>
          <% end %>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>