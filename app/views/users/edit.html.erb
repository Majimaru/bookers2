<div class="col-sm-12 col-md-8 col-lg-5 mx-auto px-5 px-sm-0">
  <h2>User info</h2>
  
  <%= render 'layouts/error', error: @user %>
  
  <%= form_with model: @user do |f| %>
    <div class="form-group">
      <label fof="inputName">Name</label>
      <%= f.text_field :name, class: "form-control", id: "inputName" %>
    </div>
    <div class="form-group">
      <label for="inputImage">Image</label>
      <%= f.file_field :profile_image, class: "form-control-file", id: "inputImage", accept: "image/*" %>
    </div>
    <div class="form-group">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction,  class: "form-control", id: "inputIntroduction" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update User", method: :patch, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>