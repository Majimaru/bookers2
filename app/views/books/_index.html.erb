<%= link_to "新しい順", books_path(sort: "created_at desc") %> | 
<%= link_to "評価の高い順", books_path(sort: "star desc") %>

<table class="table table-hover table-inverse mt-3">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <% unless hidden == "true" %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(80, 80) %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <td>
          <% book.tags.each do |tag| %>
            <%= link_to tag_search_path(content:tag.name) do %>
              <%= tag.name %>
            <% end %>
            , 
          <% end %>
        </td>
        <% unless hidden == "true" %>
          <td id="favorite_btn_<%= book.id %>">
            <%= render "favorites/btn", book: book %>
          </td>
          <td><%= "コメント数:#{book.book_comments.count}" %></td>
          <td><%= render "books/rate", book: book %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>