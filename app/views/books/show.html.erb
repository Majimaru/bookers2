<div class="col-md-3">
  <%= render 'layouts/common', user: @user, book: @book %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image(100, 100) %><br/>
            <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book_de) do %>
            <%= @book_de.title %>
          <% end %>
        </td>
        <td>
          <%= @book_de.body %>
        </td>
        <% if @user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book_de), class: "btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book_de), method: :delete, class: "btn btn-sm btn-danger",
                "data-confirm" => "本当に消しますか？"%>
          </td>
        <% end %>
        <% if @book_de.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@book_de), method: :delete, class: "text-danger" do %>
              <%= "♥#{@book_de.favorites.count}" %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to book_favorites_path(@book_de), method: :post do %>
              <%= "♥#{@book_de.favorites.count}" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>