<div class="col-md-3">
  <%= render 'layouts/common', user: @user, book: @book %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image(100, 100) %><br/>
            <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book_de) do %>
            <%= @book_de.title %>
          <% end %>
        </td>
        <td>
          <%= @book_de.body %>
        </td>
        <% if @user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book_de), class: "btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book_de), method: :delete, class: "btn btn-sm btn-danger",
                "data-confirm" => "本当に消しますか？"%>
          </td>
        <% end %>
        <% if @book_de.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@book_de), method: :delete, class: "text-danger" do %>
              <%= "♥#{@book_de.favorites.count}" %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to book_favorites_path(@book_de), method: :post do %>
              <%= "♥#{@book_de.favorites.count}" %>
            <% end %>
          </td>
        <% end %>
        <td>
          <%= "コメント数:#{@book_de.book_comments.count}" %>
        </td>
      </tr>
    </tbody>
  </table>
  
  <table>
    <% @book_de.book_comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to user_path(comment.user) do %>
            <%= image_tag comment.user.get_profile_image(100, 100) %><br/>
            <%= comment.user.name %>
          <% end %>
        </td>
        <td><%= comment.comment %></td>
        <% if comment.user == current_user %>
          <td>
            <%= link_to "Destroy", book_book_comment_path(@book_de, comment), 
                method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
  
  <%= form_with model: [@book_de, @book_comment] do |f| %>
    <div class="form-group mt-4">
      <%= f.text_area :comment, rows: 5, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class: "btn btn-sm btn-secondary" %>
    </div>
  <% end %>
</div>