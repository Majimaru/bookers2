<% if error.errors.any? %>
  <div class="col-12 p-0">
    <h3>
      <%= error.errors.count %>
      <% if error.errors.count == 1 %>
         error prohibited this obj from being saved:
      <% else %>
         errors prohibited this obj from being saved:
      <% end %>
    </h3>
    <ul>
      <% error.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>